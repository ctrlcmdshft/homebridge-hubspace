{
  "pluginAlias": "Hubspace",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Hubspace"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "description": "Your Hubspace username",
        "placeholder": "Username"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "Your Hubspace password",
        "placeholder": "Password"
      },
      "otp": {
        "title": "One-Time Password (Optional)",
        "type": "string",
        "required": false,
        "description": "If 2FA/MFA is enabled, enter the 6-digit code from your authenticator app. Only needed for initial login - leave blank once authenticated.",
        "placeholder": "123456"
      }
    }
  }
}