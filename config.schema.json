{
  "pluginAlias": "Hubspace",
  "pluginType": "platform",
  "singular": true,
  "customUi": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Hubspace"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "description": "Your Hubspace username",
        "placeholder": "Username"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "description": "Your Hubspace password",
        "placeholder": "Password"
      },
      "emailOtp": {
        "title": "Email 2FA Code (Optional)",
        "type": "string",
        "required": false,
        "description": "If you receive a 2FA code via email, enter the code here. Hubspace will send this code when you login. Leave blank once authenticated.",
        "placeholder": "Enter code from email"
      },
      "verboseLogging": {
        "title": "Verbose Logging",
        "type": "boolean",
        "required": false,
        "default": false,
        "description": "Enable detailed logging for token management and authentication. Useful for troubleshooting but creates more log output."
      }
    }
  },
  "layout": [
    {
      "type": "help",
      "helpvalue": "<div class='alert alert-info'><strong>Easy Setup:</strong> Click the button below to use the interactive login wizard, or manually configure credentials in the fields below.</div>"
    },
    {
      "key": "username",
      "type": "string",
      "notitle": true,
      "placeholder": "Or manually enter username here"
    },
    {
      "key": "password", 
      "type": "string",
      "notitle": true,
      "placeholder": "Or manually enter password here"
    },
    {
      "type": "section",
      "title": "Manual 2FA Setup (Optional)",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "key": "emailOtp",
          "description": "Only needed if you prefer manual config. Check your email after attempting to login - Hubspace sends 2FA codes via email only."
        }
      ]
    },
    {
      "type": "section",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": [
        "verboseLogging"
      ]
    }
  ]
}